<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/poketracker"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PokemonTrackerForm" >
        <activity
            android:name=".PokemonListActivity"
            android:exported="false"
            android:label="@string/title_activity_pokemon_list"
            android:theme="@style/Theme.PokemonTrackerForm" />

        <provider
            android:name=".model.PokedexContentProvider"
            android:authorities="pokedex.model.provider"
            android:enabled="true"
            android:exported="false" >
        </provider>

        <activity
            android:name=".model.PokedexActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>